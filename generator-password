<script>
let lastResult = '';

const leetMap = {
  'a':['4','@','a','A'],'b':['8','b','B'],'c':['c','C'],
  'd':['d','D'],'e':['3'],'f':['f','F'],'g':['6','9'],
  'h':['#'],'i':['1','!'],'j':['j','J'],'k':['k','K'],
  'l':['l','L'],'m':['m','M'],'n':['n','N'],'o':['0'],
  'p':['p','P'],'q':['q','Q'],'r':['r','R'],'s':['5','$'],
  't':['7','+'],'u':['u','U'],'v':['v','V'],'w':['w','W'],
  'x':['><','%'],'y':['y','Y'],'z':['2']
};

function convertText() {
  const text = document.getElementById('textInput').value;
  if (!text.trim()) return shake();

  let result = '';
  for (let i = 0; i < text.length; i++) {
    const lower = text[i].toLowerCase();
    if (leetMap[lower]) {
      const opts = leetMap[lower];
      result += opts[Math.floor(Math.random() * opts.length)];
    } else {
      result += text[i];
    }
  }

  const el = document.getElementById('result');
  el.className = 'has-content';
  el.innerHTML = [...result].map((c, i) =>
    `<span class="char-anim" style="animation-delay:${i*30}ms">${c}</span>`
  ).join('');

  lastResult = result;
  updateStrength(result);
  document.getElementById('copiedMsg').style.display = 'none';
}

function updateStrength(pw) {
  const colors = ['#ff3333','#ff7700','#ffcc00','#88ff00','#00ff9d'];
  const score = Math.min(5, Math.ceil(pw.length / 3));
  for (let i = 1; i <= 5; i++) {
    document.getElementById('s'+i).style.background =
      i <= score ? colors[score-1] : 'rgba(255,255,255,0.08)';
  }
}

function copyResult() {
  if (!lastResult) return;
  navigator.clipboard.writeText(lastResult).then(() => {
    const msg = document.getElementById('copiedMsg');
    msg.style.display = 'block';
    setTimeout(() => msg.style.display = 'none', 2200);
  }).catch(() => {
    // fallback
    const ta = document.createElement('textarea');
    ta.value = lastResult;
    document.body.appendChild(ta);
    ta.select();
    document.execCommand('copy');
    document.body.removeChild(ta);
    const msg = document.getElementById('copiedMsg');
    msg.style.display = 'block';
    setTimeout(() => msg.style.display = 'none', 2200);
  });
}

function shake() {
  const inp = document.getElementById('textInput');
  inp.style.animation = 'none';
  inp.style.borderColor = '#ff3333';
  inp.style.boxShadow = '0 0 20px rgba(255,50,50,0.3)';
  setTimeout(() => {
    inp.style.borderColor = '';
    inp.style.boxShadow = '';
  }, 600);
}

document.getElementById('textInput').addEventListener('keydown', e => {
  if (e.key === 'Enter') convertText();
});
</script>
